<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ConstLayoutQuestions"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleQuestionActivity"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.65">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_full" />

        <TextView
            android:id="@+id/QuestionTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="90sp"
            android:layout_marginRight="20sp"
            android:background="@color/white"
            android:gravity="center"
            android:text=""
            android:textColor="#535353"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/AnswerOneButton"
            android:layout_width="0sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:layout_marginTop="280sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/button_blank"
            android:textAllCaps="false"
            android:textColor="#731C2D"
            android:textSize="20sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toTopOf="@+id/AnswerTwoButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <Button
            android:id="@+id/AnswerTwoButton"
            android:layout_width="0sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/button_blank"
            android:textAllCaps="false"
            android:textColor="#731C2D"
            android:textSize="20sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AnswerOneButton" />

        <Button
            android:id="@+id/AnswerThreeButton"
            android:layout_width="0sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:background="@drawable/button_blank"
            android:textAllCaps="false"
            android:textColor="#731C2D"
            android:textSize="20sp"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AnswerTwoButton" />

        <Button
            android:id="@+id/NextQuestionButton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/ic_next"
            app:backgroundTint="@null"
            android:text=""
            android:layout_marginEnd="40sp"
            android:layout_marginBottom="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/GobackButton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@drawable/ic_close"
            app:backgroundTint="@null"
            android:text=""
            android:layout_marginStart="40sp"
            android:layout_marginBottom="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>