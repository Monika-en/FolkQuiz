<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".MainActivity"
>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_full" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="390sp"
            android:layout_height="250sp"
            android:layout_marginTop="30sp"
            app:srcCompat="@drawable/logo_main" />

        <Button
            android:id="@+id/ClothesQuizButton"
            android:layout_width="360sp"
            android:layout_height="85sp"
            android:layout_marginLeft="0sp"
            android:layout_marginTop="60sp"
            android:layout_marginRight="0sp"
            android:background="@drawable/button_main"
            android:drawableLeft="@drawable/clothes_img"
            android:drawablePadding="0sp"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:text="Носии"
            android:textAllCaps="false"
            android:textColor="#731C2D"
            android:textSize="40sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/MusicQuizButton"
            android:layout_width="360sp"
            android:layout_height="85sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/button_main"
            android:drawableLeft="@drawable/music_img"
            android:drawablePadding="0sp"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:text="Песни"
            android:textAllCaps="false"
            android:textColor="#731C2D"
            android:textSize="40sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/DancesQuizButton"
            android:layout_width="360sp"
            android:layout_height="85sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/button_main"
            android:drawableLeft="@drawable/dances_img"
            android:drawablePadding="0sp"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:text="Танци"
            android:textAllCaps="false"
            android:textColor="#731C2D"
            android:textSize="40sp"
            app:backgroundTint="@null" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>